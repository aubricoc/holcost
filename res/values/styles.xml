<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="holcost_theme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/action_bar</item>
        <item name="android:actionBarItemBackground">@drawable/background_action_bar_item</item>
    </style>

    <style name="action_bar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/green</item>
    </style>
    
    <style name="activity_background">
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/gray</item>
    </style>
    
    <style name="activity_background_bottom" parent="@style/activity_background">
        <item name="android:background">@color/green</item>
    </style>
    
    <style name="title_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="info_text">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="button">
        <item name="android:textColor">@color/green</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/background_button</item>
    </style>
    
    <style name="button_bottom" parent="@style/button">
        <item name="android:background">@drawable/background_button_bottom</item>
    </style>
    
    <style name="input">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/background_input</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="spinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/background_spinner</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="spinner_option">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/background_spinner_option</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/background_spinner_option_right</item>
    </style>
    
    <style name="checkbox" parent="@style/input">
        <item name="android:button">@drawable/button_checkbox</item>
    </style>
    
    <style name="list_view">
        <item name="android:divider">@android:color/transparent</item>
    </style>

    <style name="list_item_bad" parent="@style/button">
        <item name="android:textColor">@color/red</item>
        <item name="android:drawableRight">@drawable/ic_rating_bad</item>
    </style>
    
    <style name="list_item_good" parent="@style/button">
        <item name="android:drawableRight">@drawable/ic_rating_good</item>
    </style>

</resources>