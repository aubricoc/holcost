        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/holcost_theme" >
        <activity
            android:name=".activity.HolcostActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CreateHolcostActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.CreateDudeActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.CostActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.ListCostActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.DudeActivity"
            android:label="@string/app_name" />
    </application>

</manifest>